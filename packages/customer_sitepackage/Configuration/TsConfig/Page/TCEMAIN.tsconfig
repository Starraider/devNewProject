#
# TCEMAIN
#
TCEMAIN {
    table{
        tt_content {
            # Pages will *not* have "(copy)" appended:
            disablePrependAtCopy = 1
            # Pages will *not* be hidden upon copy:
            disableHideAtCopy = 1
        }
        pages {
            # Pages will *not* have "(copy)" appended:
            disablePrependAtCopy = 1
            # Pages will *not* be hidden upon copy:
            disableHideAtCopy = 1
        }
    }
}
#The PID is the uid of the upper most page of the branch where the assigned groups should have full editing permissions.
# Standard
[1 in tree.rootLineIds]
    TCEMAIN.permissions.groupid = 3
    TCEMAIN.permissions.userid = 1
[end]
# News
[14 in tree.rootLineIds]
    TCEMAIN.permissions.groupid = 4
    TCEMAIN.permissions.userid = 1
[end]
