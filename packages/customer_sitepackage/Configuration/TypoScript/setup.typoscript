######################
#### DEPENDENCIES ####
######################
<INCLUDE_TYPOSCRIPT: source="FILE:EXT:bootstrap_package/Configuration/TypoScript/setup.typoscript">
<INCLUDE_TYPOSCRIPT: source="FILE:EXT:customer_sitepackage/Configuration/TypoScript/Extension/Form/setup.typoscript" condition="extension.isLoaded('form') == 1">

[applicationContext == "Development"]
  config {
    no_cache = 1
    sendCacheHeaders = 0
    compressJs = 0
    concatenateCss = 0
    concatenateJs = 0
    compressCss = 0
    admPanel = 1
  }
  page {
    meta.robots = noindex,nofollow
  }
  sourceopt {
    enabled = 0
    formatHtml = 4
    removeComments = 0
  }
  plugin {
    tx_min.tinysource.enable = 0
    bootstrap_package.settings.cssSourceMapping = 1
  }
[END]
[applicationContext == "Production"]
  config {
    no_cache = 0
    sendCacheHeaders = 1
    compressJs = 1
    concatenateCss = 1
    concatenateJs = 1
    compressCss = 1
    admPanel = 0

  }
  page {
    meta.robots = index,follow
  }
  sourceopt {
    enabled = 1
    removeGenerator = 1
    formatHtml = 2
    removeComments = 1
  }
  plugin {
    tx_min.tinysource.enable = 1
    bootstrap_package.settings.cssSourceMapping = 0
  }
[END]

################
#### config ####
################
config {
  xmlprologue = none
  xhtml_cleaning = all
  disablePrefixComment = 1
  headerComment = Development by Sven Kalbhenn (sven@skom.de)
}
################
#### Encore ####
################
plugin.tx_typo3encore {
  settings {
    entrypointJsonPath = EXT:customer_sitepackage/Resources/Public/entrypoints.json
    manifestJsonPath = EXT:customer_sitepackage/Resources/Public/manifest.json
  }
}

##############
#### PAGE ####
##############
page {
  includeCSS {
    theme >
  }
  includeCSSLibs {
    googlewebfont >
    bootstrappackageicon >
  }

  includeJSLibs {
    config = /fileadmin/typetura.config.js
    config.forceOnTop = 1
    typetura = /fileadmin/typetura.js
    head = typo3_encore:head
    modernizr >
  }

  includeJS {

  }

  includeJSFooterlibs {
    jquery >
    #photoswipe_core >
    #photoswipe_ui >

    popper >
    bootstrap >
    #bootstrap_accordion >
    #bootstrap_popover >
    #bootstrap_stickyheader >
    #bootstrap_smoothscroll >
    #bootstrap_lightbox >
    #bootstrap_navbar >

  }

  includeJSFooter {
    customer_sitepackage_scripts >
  }
}
